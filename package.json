{
  "name": "vue-tabulator",
  "description": "The best way to use Tabulator in Vue projects",
  "version": "1.3.0",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "release": "release-it",
    "release:rc": "npm run release -- --preRelease=rc",
    "release:patch": "npm run release -- patch -n",
    "test": "npm run lint && npm run test:unit && npm run test:e2e",
    "test:e2e": "npm run test:e2e:local -- --headless",
    "coveralls": "npm run test:unit -- --coverage && cat ./coverage/lcov.info | coveralls",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:publish": "./scripts/deploy.sh",
    "commit": "git-cz",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/angeliski/vue-tabulator"
  },
  "keywords": [
    "table",
    "grid",
    "datagrid",
    "tabulator",
    "editable",
    "cookie",
    "sort",
    "format",
    "resizable",
    "list",
    "scrollable",
    "ajax",
    "json",
    "widget",
    "vue"
  ],
  "author": "Rogerio Angeliski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/angeliski/vue-tabulator/issues"
  },
  "dependencies": {
    "@types/dashify": "^1.0.0",
    "@types/lodash.mergewith": "^4.6.6",
    "@types/tabulator-tables": "^5.5.2",
    "dashify": "^2.0.0",
    "lodash.mergewith": "^4.6.2"
  },
  "peerDependencies": {
    "tabulator-tables": "^5.5.2",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@vitejs/plugin-vue": "^4.4.0",
    "babel-core": "^6.26.3",
    "chalk": "^5.3.0",
    "commitizen": "^4.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "coveralls": "^3.0.7",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.51.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-vue": "^9.17.0",
    "lint-staged": "^14.0.1",
    "release-it": "^16.2.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-vue2": "^2.0.3",
    "vuepress": "^1.9.10",
    "yorkie": "^2.0.0"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js",
    "*.ts"
  ],
  "main": "./dist/vue-tabulator.umd.js",
  "browser": "./dist/vue-tabulator.common.js",
  "unpkg": "./dist/vue-tabulator.umd.min.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
